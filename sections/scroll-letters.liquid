<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            overflow-x: hidden;
            /* Prevent horizontal scrollbar */
        }

        .scrolling-text {
            position: absolute;
            animation: scroll 15s linear infinite;
            white-space: nowrap;
            transform: translateX(0%);
            /* Start from the right edge of the screen */
        }

        @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-100%); }
}

    </style>
</head>

<body>
    <div class="bg-white px-16">
        <h1 id="scrollingText" class="absolute bottom-2/4 md:top-full scrolling-text">
            <span
                class="text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-yellow-500 to-[#feb82b]/50">Discover
                our range of</span>
            <span class="text-white text-6xl font-bold px-3"
                style="text-shadow: -1px 0 grey, 0 1px grey, 1px 0 grey, 0 -1px grey;"> kids clothes!</span>
            <span
                class="text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-yellow-500 to-[#feb82b]/50">Shop
                now for great deals!</span>
        </h1>
    </div>

    <script>
        const text = document.getElementById('scrollingText');

        function scrollText() {
            const textRect = text.getBoundingClientRect();
            if (textRect.right < 0) {
                // If the text has completely moved off the left edge of the screen, reset its position to the right edge
                text.style.transform = 'translateX(100%)';
            } else {
                // Otherwise, move the text a little bit to the left
                text.style.transform = 'translateX(' + (textRect.left - 2) + 'px)';
            }
            requestAnimationFrame(scrollText);
        }

        scrollText();
    </script>
</body>

</html>