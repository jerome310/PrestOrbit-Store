{% comment %} <style>
    /* Logo Font */
    @import url('https://fonts.googleapis.com/css2?family=Russo+One&display=swap');
    /* Body Font */
    @import url('https://fonts.googleapis.com/css2?family=Russo+One&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap');

    /* Super Older smaller phone screen size */
    @media (max-width: 320px) {
        .fresh-text {
            padding-top: 50px;
            font-size: 16px;
        }

        .find-text {
            padding: 0;
            font-size: 20px;
        }

        .shop-now-button {
            margin-top: 6px;
            padding: 6px 9px;
        }
    }

    /* Super Older bigger phone screen size */
    @media (min-width: 360px) {
        .fresh-text {
            padding-top: 50px;
        }

        .find-text {
            padding: 0;
        }
    }

    /* More Current Mobile Phone screen size */
    @media (max-width: 450px) {
        .mobile-container {
            width: 100%;
            padding: 24px 24px 0;
        }

        .logo_smaller_container {
            width: 92%;
            display: flex;
            justify-content: center;
            margin-left: 35px;
        }

        /* logo smaller */
        .logo_smaller {
            width: 40%;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .icons {
            margin-right: 0px;
        }

        .header-text-container {
            bottom: 30%;
        }

        .navlinks {
        transition: transform 0.3s ease-in-out;
        transform: translateX(-100%);
        display: none; /* Hide by default */
    }

    .navlinks.show {
        transform: translateX(0);
        display: flex; /* Show when the 'show' class is added */
        flex-direction: column; /* Display as a column */
    }

    /* Desktop screen size */
@media (min-width: 451px) {
    .hamburger {
        display: none; /* Hide the hamburger menu on desktop */
    }

    .navlinks {
        display: flex; /* Show the navlinks on desktop */
        transform: none; /* Reset the transform */
    }
}
    }
</style>

<header>
    <div class="relative h-[40vh] md:h-screen w-full md:w-screen">
        <!-- Background Image -->
        <img class="absolute top-0 w-full object-contain" src="{{ 'header-image-rotate.jpg' |  asset_url }}"
            alt="Header Background Image">

        <!-- Navbar Mobile Section -->
        <div class="mobile-container absolute top-0 flex items-center justify-between px-9 w-full mx-auto z-30 pt-6">
            <!-- Navlinks -->
            <div class="navlinks hidden md:flex">
                {% for link in linklists.main-menu.links %}
                <a class="font-normal hover:underline underline-offset-4 decoration-1 block px-3 py-2 rounded-md text-base md:text-white"
                    href="{{ link.url }}">{{ link.title }}</a>
                {% endfor %}
            </div>

            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="white"
                class="hamburger w-7 h-7 md:hidden cursor-pointer">
                <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <!-- Logo Section -->
            <div class="logo_smaller_container">
                <img class="logo_smaller min-[451px]:hidden" src="{{ 'logo-smaller.png' |  asset_url }}"
                    alt="prestorbit logo">
            </div>
            <div class="max-[499px]:hidden min-[500px]:block w-11/12 flex justify-center ml-12">
                <img class="w-2/4 sm:w-44 mx-auto" src="{{ 'logo.png' |  asset_url }}" alt="prestorbit logo">
            </div>
            <!-- Left Icons -->
            <div class="flex items-center">
                <img class="icons w-6 h-6 mr-3" src="{{ 'person-white.png' |  asset_url }}" alt="customer icon">
                <img class="icons w-6 h-6 mr-3" src="{{ 'search-white.png' |  asset_url }}" alt="search icon">
                <img class="icons w-6 h-6" src="{{ 'shopping-cart-white.png' |  asset_url }}" alt="shopping cart icon">
            </div>
        </div>

        <!-- Header Center Text -->
        <div
            class="header-text-container absolute top-0 right-0 bottom-0 left-0 flex flex-col items-center justify-center text-white z-30">
            <h2 class="fresh-text font-worksans pt-9 pb-0 md:pt-6 md:pb-0 text-xl md:text-3xl">Fresh, relaxed and color
                rich attire</h2>
            <h1 class="find-text font-bold mt-0 pt-3 pb-3 md:py-5 text-2xl md:text-4xl">Find your Vibe!</h1>
            <a href="" class="shop-now-button bg-black py-3 px-3 mt-3">Shop Now</a>
        </div>
    </div>
</header>

<script>
    const toggleButton = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.navlinks');

    toggleButton.addEventListener('click', () => {
        navLinks.classList.toggle('show');
    })
</script> {% endcomment %}


<div class="py-4 px-10 md:px-0 bg-gradient-to-r from-[#feb82b]/50 via-[#e561a1]/50 to-[#feb82b]/50">
    <p class="text-center">&#128075;Welcome to Ariel Cameron Leather, the home of handmade leather goods &#128512;</p>
</div>

<!-- Create a navbar slider with a hamburger icon -->
<div class="flex flex-col max-w-screen-lg mx-auto pt-5" x-data="{open: false, searchBarButtonOpen: false}">
    <!-- Navbar -->
    <div class="flex items-center justify-between px-4 py-3">
        <!-- Hamburger icon -->
        <button class="text-[#2E2D34] focus:outline-none md:hidden" x-on:click="open = !open">
            <svg class="h-6 w-6" x-show="!open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg class="h-6 w-6" x-show="open" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
        <!-- Desktop Search icon -->
        <div class="text-[#2E2D34] hidden md:block">
            <button x-on:click="searchBarButtonOpen = true" type="button"
                class="whitespace-nowrap text-base text-gray-500 hover:text-gray-900">
                {% render 'icon-search' %}
            </button>
        </div>
        <!-- Desktop Logo -->
        <div class="text-center">
            <a href="{{ shop.url }}">
                {% if section.settings.image == blank %}
                <img class="ml-[25px] md:ml-0 w-[150px] h-[150px] md:w-[175px] md:h-[175px]"
                    src="{{ 'logo.png' |  asset_url }}" alt="My company logo">
                {% else %}
                <img class="w-[150px] h-[150px] md:w-[175px] md:h-[175px]"
                    src="{{ section.settings.image | img_url: 'master' }}" alt="My company logo">
                {% endif %}
            </a>
        </div>
        <!-- Desktop Cart -->
        <div class="text-[#2E2D34] hidden md:block">
            {% render 'icon-cart' %}
        </div>
        <div class="flex md:block text-[#2E2D34] md:hidden">
            <!-- Mobile Search icon -->
            <div class="pr-4">
                {% render 'icon-search' %}
            </div>
            <div>
                <!-- Shopping icon -->
                {% render 'icon-cart' %}
            </div>
        </div>

    </div>
    <!-- Slider -->
    <div class="bg-[#FEB82B]/20 md:hidden" x-show="open" x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="transform -translate-x-full" x-transition:enter-end="transform translate-x-0"
        x-transition:leave="transition ease-in duration-300" x-transition:leave-start="transform translate-x-0"
        x-transition:leave-end="transform -translate-x-full">
        <!-- Links -->
        <div class="flex flex-col px-4 pt-6 md:pt-0 md:py-2 space-y-2">
            {% for link in linklists.main-menu.links %}
            <a class="font-normal text-black hover:underline underline-offset-4 decoration-1 block px-3 py-2 rounded-md text-base"
                href="{{ link.url }}">{{ link.title }}</a>
            {% endfor %}
        </div>
        <!-- Social Media Icons -->
        <div class="flex px-6 pt-8 pb-6">
            {% render 'social-media-twitter' %}
            {% render 'social-media-facebook' %}
            {% render 'social-media-pinterest' %}
            {% render 'social-media-instagram' %}
            {% render 'social-media-tiktok' %}
        </div>
    </div>
    <!-- Desktop Navabar -->
    <div class="hidden md:flex items-center justify-around max-w-screen-md mx-auto mt-4">
        {% for link in linklists.main-menu.links %}
        <a class="font-normal text-[#5E5C66] hover:underline underline-offset-4 decoration-1 block px-3 py-2 rounded-md text-base"
            href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
    </div>
    <!-- White border box -->
    <div class="absolute top-[100px] bg-white border rounded-lg p-4" x-show="searchBarButtonOpen">
        <!-- Search input field (customize as needed) -->
        <input type="text" placeholder="Search..." class="w-2/4 mx-auto border-none outline-none">
    </div>
    <div x-show="searchBarButtonOpen" class="w-3/4 mx-auto absolute top-[100px] bg-white border">
        <button type="button" x-on:click="searchBarButtonOpen = false"
            class="absolute top-0 right-0 mr-5 mt-5 text-gray-500">
            {% render 'icon-close' %}
        </button>
        <div class="h-56 flex justify-center items-center">
            <form action="{{ routes.search_url }}" method="get" class="flex-auto">
                <div class="relative w-2/4 mx-auto text-gray-500 px-2.5 border">
                    <input type="search" name="q" placeholder="Search"
                        class="w-full bg-white h-10 px-5 pr-5 rounded-full text-sm focus:outline-none">
                </div>
            </form>
        </div>
    </div>
</div>


