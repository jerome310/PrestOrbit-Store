<script>
    document.addEventListener('DOMContentLoaded', function () {
        const messageContainer = document.getElementById('messageContainer');
        const messageContainerTwo = document.getElementById('messageContainerTwo');
        const messageContainerThree = document.getElementById('messageContainerThree');
        const removeContainers = document.querySelectorAll('.removeContainer'); // Select all elements with class removeContainer
        const subButtons = document.querySelectorAll('.subButton');
        const subButtonsTwo = document.querySelectorAll('.subButtonTwo');
        const subButtonsThree = document.querySelectorAll('.subButtonThree');
        const hamburgerButton = document.getElementById('hamburger-icon');

        // Hide messageContainer and messageContainerTwo on page load
        messageContainer.style.display = 'none';
        messageContainerTwo.style.display = 'none';
        messageContainerThree.style.display = 'none';

        // Show removeContainers and hide messageContainer when hamburger button is clicked
        hamburgerButton.addEventListener('click', function () {
            removeContainers.forEach(container => {
                container.classList.remove('hidden'); // Show all removeContainers
            });
            messageContainer.style.display = 'none';
            messageContainerTwo.style.display = 'none';
            messageContainerThree.style.display = 'none';
        });

        // Show messageContainer when subButton is clicked
        subButtons.forEach(button => {
            button.addEventListener('click', function () {
                removeContainers.forEach(container => {
                    container.classList.add('hidden'); // Hide all removeContainers
                });
                messageContainer.style.display = 'block'; // Show messageContainer
                messageContainerTwo.style.display = 'none'; // Ensure messageContainerTwo is hidden
                messageContainerThree.style.display = 'none'; // Ensure messageContainerThree is hidden
            });
        });

        // Show messageContainerTwo when subButtonTwo is clicked
        subButtonsTwo.forEach(button => {
            button.addEventListener('click', function () {
                removeContainers.forEach(container => {
                    container.classList.add('hidden'); // Hide all removeContainers
                });
                messageContainer.style.display = 'none'; // Ensure messageContainer is hidden
                messageContainerTwo.style.display = 'block'; // Show messageContainerTwo
                messageContainerThree.style.display = 'none'; // Ensure messageContainerThree is hidden
            });
        });

        // Show messageContainerTwo when subButtonTwo is clicked
        subButtonsThree.forEach(button => {
            button.addEventListener('click', function () {
                removeContainers.forEach(container => {
                    container.classList.add('hidden'); // Hide all removeContainers
                });
                messageContainer.style.display = 'none'; // Ensure messageContainer is hidden
                messageContainerTwo.style.display = 'none'; // Ensure messageContainerTwo is hidden
                messageContainerThree.style.display = 'block'; // Displaying messageContainerThree
            });
        });

        // Function to handle back arrow click for messageContainer
        function handleBackArrowClick() {
            messageContainer.style.display = 'none';
            messageContainerTwo.style.display = 'none';
            messageContainerThree.style.display = 'none';
            removeContainers.forEach(container => {
                container.classList.remove('hidden'); // Show all removeContainers
            });
        }

        // Add event listener for back arrow click for messageContainer
        document.getElementById('backArrow').addEventListener('click', handleBackArrowClick);

        // Add event listener for backArrowTwo to go back to removeContainer
        document.getElementById('backArrowTwo').addEventListener('click', function() {
            messageContainerTwo.style.display = 'none'; // Hide messageContainerTwo
            removeContainers.forEach(container => {
                container.classList.remove('hidden'); // Show all removeContainers
            });
        });

        // Add event listener for backArrowThree to go back to removeContainer
        document.getElementById('backArrowThree').addEventListener('click', function() {
            messageContainerThree.style.display = 'none'; // Hide messageContainerThree
            removeContainers.forEach(container => {
                container.classList.remove('hidden'); // Show all removeContainers
            });
        });
    });
</script>

