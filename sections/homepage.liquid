   document.querySelectorAll('.subButton').forEach(button => {
        button.addEventListener('click', function () {
            document.querySelectorAll('[id^="removeContainer"]').forEach(container => {
                container.style.display = 'none';
            });

            // Check if messageDiv already exists
            if (!document.getElementById('messageDiv')) {
                const messageDiv = document.createElement('div');
                messageDiv.id = 'messageDiv'; // Assign an ID to the messageDiv
                const img = document.createElement('img');
                img.src = "{{ 'back-arrow.png' | asset_url }}";
                img.alt = "dropdown arrow";

                // Apply Flexbox styles to messageDiv
                messageDiv.style.display = 'flex';
                messageDiv.style.justifyContent = 'space-between';
                messageDiv.style.alignItems = 'center'; // Align items vertically in the center
                messageDiv.style.width = '55%'; // Set the width to 55%

                // Apply vanilla CSS styles to the image
                img.style.width = '22px'; // w-7 (1.75rem = 28px)
                img.style.position = 'relative';
                img.style.left = '10px';
                img.style.cursor = 'pointer'; // Add cursor pointer

                // Add click event listener to the image
                img.addEventListener('click', function () {
                    console.log('Image clicked');
                    document.querySelectorAll('.subButton').forEach(subButton => {
                        console.log('Bringing back subButton:', subButton);
                        subButton.style.display = 'block';
                    });
                    document.querySelectorAll('[id^="removeContainer"]').forEach(container => {
                        container.style.display = 'flex';
                    });
                    messageDiv.style.display = 'none'; // Hide the messageDiv
                });

                messageDiv.appendChild(img);

                // Create a text node with the word "Woman"
                const textNode = document.createTextNode('Woman');
                const textSpan = document.createElement('span');
                textSpan.appendChild(textNode);
                textSpan.style.fontSize = '22px'; // Set the font size to 22px
                messageDiv.appendChild(textSpan);

                // Append the new div to the messageContainer
                document.getElementById('messageContainer').appendChild(messageDiv);
            }
        });
    });

