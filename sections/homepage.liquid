<style>
/* Logo Font */
@import url('https://fonts.googleapis.com/css2?family=Russo+One&display=swap');
/* Body Font */
@import url('https://fonts.googleapis.com/css2?family=Russo+One&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap');

@media (max-width: 400px) {
    /* Logo */
    .logo {
       margin-left: 0;
    }
}
</style>

<header>
<div class="relative h-[40vh] md:h-screen w-full md:w-screen">
    {% comment %} Background Image {% endcomment %}
    <img class="absolute top-0 w-full object-contain" src="{{ 'header-image-rotate.jpg' |  asset_url }}"
        alt="Header Background Image">

    {% comment %} Navbar Mobile Section {% endcomment %}
    <div class="absolute top-0 flex items-center justify-between px-6 w-full mx-auto z-30 pt-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="white"
            class="w-7 h-7">
            <path strokeLinecap="round" strokeLinejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
        {% comment %} Logo Section {% endcomment %}
        <div class="logo ml-16">
            <img src="{{ 'logo.png' |  asset_url }}" alt="">
        </div>
        {% comment %} Left Icons {% endcomment %}
        <div class="flex items-center">
            <img class="w-6 h-6 mr-3" src="{{ 'person-white.png' |  asset_url }}" alt="customer icon">
            <img class="w-6 h-6 mr-3" src="{{ 'search-white.png' |  asset_url }}" alt="search icon">
            <img class="w-6 h-6" src="{{ 'shopping-cart-white.png' |  asset_url }}" alt="shopping cart icon">
        </div>
    </div>

    {% comment %} Header Center Text {% endcomment %}
    <div class="absolute inset-0 flex flex-col items-center justify-center text-white z-30">
        <h2 class="font-worksans pt-9 pb-0 md:pt-6 md:pb-0 text-xl md:text-3xl">Fresh, relaxed and color rich attire</h2>
        <h1 class="font-bold mt-0 pt-3 pb-3 md:py-5 text-2xl md:text-4xl">Find your Vibe!</h1>
        <a href="" class="bg-black py-3 px-3 mt-3">Shop Now</a>
    </div>
</div>

</header>